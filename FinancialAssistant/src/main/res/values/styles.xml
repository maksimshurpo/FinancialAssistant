<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBarTheme</item>
        <item name="android:actionBarTabBarStyle">@style/CustomTabsActionBar</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/RoyalBlue</item>
    </style>

    <style name="CustomTabsActionBar" parent="Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/RoyalBlue</item>
    </style>

    <style name="navigationDrawer">
        <item name="android:layout_width">@dimen/drawer_slide_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/meLightFgG</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>
</resources>
